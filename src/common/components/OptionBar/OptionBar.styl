.optionBar {
    display: flex
    align-items: center
    font-size: 1.16rem
    gap: 10px
    height: 3.833rem
    background-color: white

    .option {
        height: 100%
        color: #71777C
        cursor: pointer
        padding: 0 0.8em
        display: flex
        align-items: center
        justify-content: center // 文字居中
    }

    .option.choose {
        color: #007FFF
    }
}

.optionBar.fence {
    gap: 0

    .option {
        height: 1em
        border-left: 1px solid hsla(0, 0%, 59.2%, 0.5)

        &:first-child {
            border: none
        }
    }
}