.qrCode {
    padding: 10px
    display: flex
    background-color: white
    cursor: pointer

    img {
        margin-right: 20px
        width: 4.167rem
        height: 4.167rem
    }

    span {
        display: block
    }

    .title {
        font-weight: 400
        font-size: 14px
        color: #1d2129
        margin-bottom: 10px
    }

    .desc {
        font-size: 12px
        color: #86909c
    }
}